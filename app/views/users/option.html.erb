<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ユーザ設定</h1>

    <div class="accbox">
      <label for="changepass">パスワード設定</label>
      <input type="checkbox" id="changepass" class="cssacc" />
      <div class="accshow">
        <!-- ここに隠す中身-->
        <p>
          パスワード変更用
        </p>
      </div>
      <%= form_tag("/logout") do %>
        <label for="userlogout">ログアウト</label>
        <input type="checkbox" id="userlogout" class="cssacc" />
        <div class="accshow">
          <!--ここに隠す中身 -->
          <button type="submit" class="cp_btn">ログアウト</button>
          <!-- <a href="logout" class="cp_btn"> ログアウト</a>-->
        </div>
      <% end %>
    </div>
  </div>
</div>
